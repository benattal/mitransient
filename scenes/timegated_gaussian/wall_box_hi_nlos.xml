<?xml version="1.0" encoding="utf-8"?>
<scene version="3.0.0">
    <!-- Camera at origin, looking down -Z toward the relay wall -->
    <sensor type="perspective">
        <string name="fov_axis" value="smaller"/>
        <float name="fov" value="45"/>
        <transform name="to_world">
            <lookat origin="0, 0, 0"
                    target="0, 0, -1"
                    up="0, 1, 0"/>
        </transform>
        <film type="transient_hdr_film">
            <integer name="width" value="128"/>
            <integer name="height" value="128"/>
            <integer name="temporal_bins" value="1000"/>
            <float name="bin_width_opl" value="0.01"/>
            <float name="start_opl" value="0.0"/>
            <rfilter type="box"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="1000"/>
        </sampler>
    </sensor>

    <!-- Time-Gated Integrator with Gaussian Pulse -->
    <integrator type="timegated_transient_path">
        <boolean name="camera_unwarp" value="false"/>
        <boolean name="use_nlos_only" value="false"/>
        <integer name="max_depth" value="8"/>

        <emitter type="confocal_projector" name="confocal_projector">
            <integer name="grid_rows" value="1"/>
            <integer name="grid_cols" value="1"/>
            <float name="grid_sigma" value="0.001"/>
            <float name="grid_intensity" value="100.0"/>
            <string name="grid_spacing" value="uniform"/>
            <float name="fov" value="0.78"/>
            <boolean name="is_confocal" value="true"/>
            <integer name="max_rejection_samples" value="4"/>
            <!-- Pulse configuration on projector -->
            <string name="pulse_type" value="gaussian"/>
            <float name="pulse_width_opl" value="0.03"/>
        </emitter>
    </integrator>

    <!-- Relay wall at z=-1.5, facing +Z (toward camera) -->
    <shape type="rectangle">
        <transform name="to_world">
            <scale x="2.0" y="2.0" z="1.0"/>
            <translate x="0" y="0" z="-2.0"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.8, 0.8, 0.8"/>
        </bsdf>
    </shape>

    <!-- Red occluding wall blocking bottom half of FOV (in front of relay wall) -->
    <shape type="cube">
        <transform name="to_world">
            <scale x="2.0" y="1.0" z="0.25"/>
            <translate x="0.0" y="-1.0" z="-0.5"/>
        </transform>
        <bsdf type="retroreflector">
            <rgb name="reflectance" value="0.01, 0.0, 0.0"/>
            <float name="lobe_exponent" value="100.0"/>
        </bsdf>
    </shape>

